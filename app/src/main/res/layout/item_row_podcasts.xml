<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_podcasts"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/bg_home_card"
    android:layout_height="wrap_content"
    android:padding="@dimen/_1sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_podcasts"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_1sdp"
        android:scaleType="fitXY"
        android:src="@drawable/material_design_default"
        app:riv_corner_radius_top_left="@dimen/_5sdp"
        app:riv_corner_radius_top_right="@dimen/_5sdp" />

    <TextView
        android:id="@+id/tv_podcasts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_podcasts"
        android:layout_alignStart="@+id/iv_podcasts"
        android:layout_alignEnd="@+id/iv_podcasts"
        android:maxLines="1"
        android:padding="@dimen/_5sdp"
        android:text="@string/app_name"
        android:textAlignment="viewStart"
        android:textColor="?colorTitle"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>